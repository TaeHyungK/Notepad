<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    tools:context=".EditActivity">

    <EditText
        android:id="@+id/activity_edit_title_edit"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/activity_edit_desc_edit"
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        android:fontFamily="sans-serif-black"
        android:hint="@string/note_add_title_hint"
        app:layout_constraintVertical_weight="1"
        />

    <EditText
        android:id="@+id/activity_edit_desc_edit"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_edit_title_edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/activity_edit_image_recyclerview_container"
        android:layout_marginTop="20dp"
        android:hint="@string/note_add_desc_hint"
        android:textSize="25sp"
        android:fontFamily="sans-serif"
        android:gravity="left|top"
        app:layout_constraintVertical_weight="6"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activity_edit_image_recyclerview_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/activity_edit_image_add_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_edit_desc_edit"
        app:layout_constraintVertical_weight="2">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/activity_edit_image_recyclerview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <Button
        android:id="@+id/activity_edit_image_add_btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_edit_image_recyclerview_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="5dp"
        android:text="@string/note_add_image_add"
        android:textSize="13sp"
        android:elevation="5dp"
        app:layout_constraintVertical_weight="1"
        />
</androidx.constraintlayout.widget.ConstraintLayout>