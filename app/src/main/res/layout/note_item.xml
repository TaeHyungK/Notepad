<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/note_item_root_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="90dp">

    <ImageView
        android:id="@+id/note_item_thumbnail"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/note_item_title"
        app:layout_constraintHorizontal_weight="2"
        android:padding="5dp"
        android:src="@drawable/default_no_image"
        />

    <TextView
        android:id="@+id/note_item_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@+id/note_item_thumbnail"
        app:layout_constraintEnd_toStartOf="@+id/note_item_remove_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/note_item_desc"
        android:gravity="left"
        android:textSize="25sp"
        android:fontFamily="sans-serif-black"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintHorizontal_weight="6"
        app:layout_constraintVertical_weight="0.75"
        />

    <TextView
        android:id="@+id/note_item_desc"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@+id/note_item_thumbnail"
        app:layout_constraintEnd_toStartOf="@+id/note_item_remove_btn"
        app:layout_constraintTop_toBottomOf="@+id/note_item_title"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="20sp"
        android:fontFamily="sans-serif"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintHorizontal_weight="6"
        app:layout_constraintVertical_weight="1.25"
        />

    <Button
        android:id="@+id/note_item_edit_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@+id/note_item_title"
        app:layout_constraintTop_toTopOf="@+id/note_item_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/note_item_remove_btn"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintVertical_weight="1"
        android:text="@string/note_edit_btn"
        />
    <Button
        android:id="@+id/note_item_remove_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@+id/note_item_title"
        app:layout_constraintTop_toBottomOf="@+id/note_item_edit_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintVertical_weight="1"
        android:text="@string/note_remove_btn"
        />


</androidx.constraintlayout.widget.ConstraintLayout>